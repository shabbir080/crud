<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>READ OPERATIONS</title>

  <!-- ‚úÖ Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- ‚úÖ Simple Animation -->
  <style>
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .fade-in {
      animation: fadeInUp 0.8s ease-out;
    }
  </style>
</head>

<body class="min-h-screen bg-gradient-to-br from-blue-500 via-purple-500 to-pink-500 text-gray-900">

  <div class="container mx-auto px-6 py-10">
    <!-- Header -->
    <div class="flex items-center justify-between mb-10">
      <h1 class="text-4xl font-bold text-white drop-shadow-lg">READ OPERATIONS</h1>
      <a href="/"
        class="bg-white/20 text-white font-medium px-5 py-2 rounded-xl border border-white/30 hover:bg-white hover:text-blue-700 transition-all duration-300 shadow-lg">
        + Create
      </a>
    </div>

    <!-- Data Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% if (rows.length > 0) { %>
        <% rows.map((eachData) => { %>
          <div
            class="fade-in bg-white/90 backdrop-blur-md p-6 rounded-2xl shadow-2xl hover:shadow-3xl transform hover:scale-105 transition-all duration-500 border border-white/40">
            <h5 class="text-xl font-semibold text-blue-700 mb-1"><%- eachData.Name %></h5>
            <h6 class="text-gray-600 mb-4"><%- eachData.Email %></h6>

            <div class="flex gap-3">
              <a href="/update?id=<%- eachData.id %>"
                class="bg-gradient-to-r from-green-500 to-emerald-600 text-white px-4 py-1.5 rounded-lg shadow hover:opacity-90 transition-all duration-300">
                ‚úèÔ∏è Edit
              </a>

              <a href="/delete?id=<%- eachData.id %>"
                class="bg-gradient-to-r from-rose-500 to-pink-600 text-white px-4 py-1.5 rounded-lg shadow hover:opacity-90 transition-all duration-300">
                üóë Delete
              </a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div
          class="bg-white/80 backdrop-blur-md p-10 rounded-2xl shadow-2xl text-center fade-in border border-white/40">
          <h5 class="text-2xl font-semibold text-gray-600">No Data Found</h5>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
